<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/ehospital_theme_background"
    android:padding="24dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Set Daily Goals"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_marginBottom="16dp"/>

    <!-- Calories -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:hint="Daily Calories (kcal)">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_goal_calories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Protein -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:hint="Protein (g)">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_goal_protein"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Carbs -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:hint="Carbohydrates (g)">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_goal_carbs"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Fat -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@android:color/black"
        android:hint="Fat (g)">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/edit_goal_fat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:inputType="number" />
    </com.google.android.material.textfield.TextInputLayout>

</LinearLayout>