<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F7FA"
    tools:context=".MealDetailActivity">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:layout_marginTop="30dp">

            <!-- Added ConstraintLayout wrapper to fix alignment issues -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="16dp">

                <ImageView
                    android:id="@+id/toolbar_user_icon"
                    android:layout_width="124dp"
                    android:layout_height="46dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/hospital" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="3dp"
                    android:text="Meal Details"
                    android:textColor="#0C457D"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toEndOf="@id/toolbar_user_icon"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageButton
                    android:id="@+id/back_button"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:src="@android:drawable/ic_menu_revert"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="#0C457D" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/ehospital_theme_background"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_bar_layout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- MEAL INFO CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:layout_marginBottom="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/detail_dish_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Dish Name"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/detail_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Nov 24, 2025 at 12:00 PM"
                        android:textColor="#666"
                        android:textSize="14sp"
                        android:layout_marginBottom="12dp"/>

                    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#EEE" android:layout_marginBottom="12dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Portion Size"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                    <TextView
                        android:id="@+id/detail_portion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="1 bowl"
                        android:textColor="#000"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingredients / Items"
                        android:textStyle="bold"
                        android:textColor="#333"/>
                    <TextView
                        android:id="@+id/detail_ingredients"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Chicken, Rice"
                        android:textColor="#000"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- NUTRITION CARD -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nutrition Facts"
                        android:textColor="#0C457D"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Calories" android:textSize="12sp" android:textColor="#666"/>
                            <TextView android:id="@+id/detail_calories" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="500" android:textSize="24sp" android:textStyle="bold" android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Protein" android:textSize="12sp" android:textColor="#666"/>
                            <TextView android:id="@+id/detail_protein" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="30g" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Carbs" android:textSize="12sp" android:textColor="#666"/>
                            <TextView android:id="@+id/detail_carbs" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="40g" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">
                            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Fat" android:textSize="12sp" android:textColor="#666"/>
                            <TextView android:id="@+id/detail_fat" android:layout_width="wrap_content" android:layout_height="wrap_content" tools:text="20g" android:textSize="18sp" android:textStyle="bold" android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- INSIGHTS SECTION TITLE -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI Health Insights"
                android:textColor="#333"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>

            <!-- INSIGHT: RISK (RED) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_risk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_card_red"
                app:cardCornerRadius="12dp"
                app:contentPadding="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/text_risk"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textStyle="bold"
                    tools:text="HIGH RISK: Contains Peanuts"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- INSIGHT: WARNING (YELLOW) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_warning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_card_yellow"
                app:cardCornerRadius="12dp"
                app:contentPadding="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/text_warning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textStyle="bold"
                    tools:text="WARNING: High sugar content"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- INSIGHT: POSITIVE (GREEN) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_positive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/color_card_green"
                app:cardCornerRadius="12dp"
                app:contentPadding="16dp"
                android:layout_marginBottom="8dp"
                android:visibility="gone"
                tools:visibility="visible">
                <TextView
                    android:id="@+id/text_positive"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#333"
                    android:textStyle="bold"
                    tools:text="POSITIVE: Good source of protein"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- NO INSIGHTS FALLBACK -->
            <TextView
                android:id="@+id/text_no_insights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No specific insights recorded for this meal."
                android:textAlignment="center"
                android:padding="24dp"
                android:textColor="#777"
                android:fontFamily="sans-serif-medium"
                android:visibility="gone"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>